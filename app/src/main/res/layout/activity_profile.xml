<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="175dp"
        android:layout_height="62dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:text="@string/profileActivity"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_columnWeight="1"
        android:layout_alignBottom="@id/textView1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="-56dp"
        android:text="@string/yourname"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_columnSpan="2"
        android:layout_alignBottom="@id/textView2"
        android:layout_marginBottom="-50dp"
        android:hint="Type your name here"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_columnWeight="1"
        android:layout_alignBottom="@id/editText3"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="-60dp"
        android:text="@string/YourEmail"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="168dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_alignBottom="@id/textView3"
        android:layout_marginBottom="-54dp"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_alignBottom="@id/editText4"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="-54dp"
        android:text="@string/YourPicture"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="278dp" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/textView4"
        android:layout_marginBottom="-73dp"
        android:src="@android:drawable/picture_frame" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="381dp"
        android:layout_height="53dp"
        android:layout_columnWeight="1"
        android:layout_alignBottom="@id/button2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="-53dp"
        android:text="@string/picture"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="396dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textView5"
        android:layout_marginBottom="-39dp"
        android:text="Go To Chat!"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button3"
        android:layout_marginBottom="-70dp"
        android:text="Go To WeatherForecast!" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button4"
        android:layout_marginBottom="-78dp"
        android:text="Go to Toolbar page" />


</RelativeLayout>